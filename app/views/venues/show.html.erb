<body>
    <div class="content">
        <h1 style="font-size:40px; color:purple"><%= @venue.name %></h1>
        <h2 style="color:purple"><%= "City: #{@venue.city}, State: #{@venue.state}" %></h2>
        <%= link_to 'All Players', players_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %><br>
        <%= link_to 'All Coaches', coaches_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %><br>
        <%= link_to 'All Teams', teams_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %><br>
        <%= link_to 'All Matches', matches_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %><br>
        <%= link_to 'Back', venues_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %><br>

        <h2>Matches Held</h2>
        <table style="width:100%">
            <thead>
                <tr style="font-size:25px">
                    <th>Week</th>
                    <th>Home Team</th>
                    <th>Away Team</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @venue.matches.each do |match| %>
                    <tr>
                        <td style="text-align:center"><%= match.week %></td>
                        <td style="text-align:center"><%= link_to match.home_team.name, team_path(match.home_team.id) %></td>
                        <td style="text-align:center"><%= link_to match.away_team.name, team_path(match.away_team.id) %></td>
                        <td style="text-align:center"><%= link_to 'View Match', match_path(match.id) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</body>