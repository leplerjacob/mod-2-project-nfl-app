<h1>All Players</h1>
<%= link_to 'Teams', teams_path%>
<h4>Sorted By Teams</h4>

<% @team_names.each do |team| %>
    <h2><%= team %></h2>
    <table style="width:50%">
        <thead>
            <tr style="font-size:25px">
                <th>First Name</th>
                <th>Last Name</th>
                <th>Jersey Number</th>
                <th>Position</th>
                <th>Team Name</th>
            </tr>
        </thead>
        <tbody>
            <% @players.each do |player| %>
                <% if player.team.name == team %>
                <tr>
                    <td><%= link_to player.first_name, player %></td>
                    <td><%= player.last_name %></td>
                    <td><%= player.jersey %></td>
                    <td><%= player.position %></td>
                    <td><%= player.team.name %></td>
                </tr>
                <% end %>
            <% end %>
        </tbody>
    </table>
<% end %>