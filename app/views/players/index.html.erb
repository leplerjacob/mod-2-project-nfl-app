<h1>All Players</h1>
<h4>Sorted By Teams</h4>

<% @team_names.each do |team| %>
    <h2>team</h2>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Weight</th>
                <th>Height</th>
                <th>Home Town</th>
                <th>College</th>
                <th>Jersey Number</th>
                <th>Position</th>
                <th>Team Name</th>
            </tr>
        </thead>
        <tbody>
            <% @players.each do |player| %>
                <% if player.team_name == team %>
                <tr>
                    <td><%= player.first_name %></td>
                    <td><%= player.last_name %></td>
                    <td><%= player.birth_date %></td>
                    <td><%= player.calc_age %></td>
                    <td><%= player.weight %></td>
                    <td><%= player.height %></td>
                    <td><%= player.home_town %></td>
                    <td><%= player.college %></td>
                    <td><%= player.jersey %></td>
                    <td><%= player.position %></td>
                    <td><%= player.team_name %></td>
                </tr>
                <% end %>
            <% end %>
        </tbody>
    </table>
<% end %>