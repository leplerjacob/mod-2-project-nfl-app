<h1 style="font-size:100px; color:purple"><%= @team.name %></h1>
<h2><%= "#{@team.state},  #{@team.division}"%></h2>
<h2><%= "Wins:  #{@team.wins},  Losses:  #{@team.losses}" %></h2>

<h4><%= link_to 'All Teams', teams_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %></h4>
<h4><%= link_to 'All Player', players_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %></h4>
<h4><%= link_to 'All Coaches', coaches_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %></h4><br>

<strong style="font-size:35px; color:red">Coaches</strong>
<table style="width:35%">
    <thead>
        <tr style="font-size:25px">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Position</th>
        </tr>
    </thead>
    <tbody>
        <% @team.coaches.each do |coach| %>
        <tr>
            <td><%= coach.first_name %></td>
            <td><%= coach.last_name %></td>
            <td><%= coach.position %></td>
        </tr>
        <% end %>
    </tbody>
</table><br><br>

<strong style="font-size:35px; color:red">Players</strong>
<table style="width:35%">
    <thead>
        <tr style="font-size:25px">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Jersey Number</th>
            <th>Position</th>
        </tr>
    </thead>
    <tbody>
        <% @team.players.each do |player| %>
        <tr>
            <td><%= link_to player.first_name, player %></td>
            <td><%= player.last_name %></td>
            <td><%= player.jersey %></td>
            <td><%= player.position %></td>
        </tr>
        <% end %>
    </tbody>
</table>