<body>
    <div class="content">
        <%= link_to 'Back', team_path(@team.id) %>
        <h1 style="font-size:40px; color:purple"><%= @team.name %></h1>
        <h2 style="font-size:30px; color:red">All 2020 Matches</h2>
        <h3 style="color:red"><%= "Total wins: #{@team.calc_wins}, Total losses: #{@team.calc_losses}" %></h3>

        <strong style="font-size:35px; color:red">Home Games</strong>
        <table style="width:100%">
            <thead>
                <tr style="font-size:25px">
                    <th>Week</th>
                    <th>Opponent</th>
                    <th>Opponent Score</th>
                    <th>Team Score</th>
                    <th>Winner</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @team.home_matches.each do |match| %>
                <tr>
                    <td style="text-align:center"><%= match.week %></td>
                    <td style="text-align:center"><%= link_to match.away_team.name , team_path(match.away_team.id) %></td>
                    <td style="text-align:center"><%= match.away_score %></td>
                    <td style="text-align:center"><%= match.home_score %></td>
                    <td style="text-align:center"><%= match.winner.name %></td>
                    <td style="text-align:center"><%= link_to 'view', match_path(match.id)%></td>
                </tr>
                <% end %>
            </tbody>
        </table><br><br>

        <strong style="font-size:35px; color:red">Away Games</strong>
        <table style="width:100%">
            <thead>
                <tr style="font-size:25px">
                    <th>Week</th>
                    <th>Opponent</th>
                    <th>Opponent Score</th>
                    <th>Team Score</th>
                    <th>Winner</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @team.away_matches.each do |match| %>
                <tr>
                    <td style="text-align:center"><%= match.week %></td>
                    <td style="text-align:center"><%= link_to match.home_team.name , team_path(match.home_team.id) %></td>
                    <td style="text-align:center"><%= match.home_score %></td>
                    <td style="text-align:center"><%= match.away_score %></td>
                    <td style="text-align:center"><%= match.winner.name %></td>
                    <td style="text-align:center"><%= link_to 'view', match_path(match.id)%></td>
                </tr>
                <% end %>
            </tbody>
        </table><br><br>

        <%= link_to 'Back', team_path(@team.id) %>

    </div>
</body>