<body>
    <div class="content">
        <h1 style="font-size:40px; color:purple">All Coaches</h1>
        <%= link_to 'All Matches', matches_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %><br>
        <%= link_to 'All Players', players_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %><br>
        <%= link_to 'All Teams', teams_path, {:style=>'color:#BD2A2A;', :class => "css_class"} %><br>
        <b style='color:red'>Quick Scroll to Team</b><br>
        <% Team.team_names.each do |team| %>
            <% if team == Team.team_names[-1] %>
                <b><a href='#<%=team%>'><%="#{team}"%></a></b>
            <% else %>
                <b><a href='#<%=team%>'><%="#{team}, "%></a></b>
            <% end %>
        <% end %><br><br>
        <h4>Sorted by Teams</h4>

        <% Team.team_names.sort.each do |name| %>
            <div id=<%= name %>>
                <strong style="font-size:35px"><%= link_to name, team_path(Team.find_by(name: name)), {:style=>'color:#FF2D00;', :class => "css_class"} %></strong>
                <table style="width:106%">
                    <thead>
                        <tr style="font-size:25px">
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Position</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @coaches.each do |coach| %>
                            <% if coach.team.name == name %>
                                <tr>
                                    <td style="text-align:center"><%= link_to coach.first_name, coach %></td>
                                    <td style="text-align:center"><%= coach.last_name %></td>
                                    <td style="text-align:center"><%= link_to coach.position, coachpositions_path(coach.position) %></td>
                                </tr>
                            <% end %>
                        <% end %>
                    </tbody>
                </table><br><br>
            </div>
        <% end %>
    </div>
</body>