<h2>Login</h2>
<div>
    <%= form_for :user, url: login_path do |p| %>
        <div>
            <%= p.label :username %>
            <%= p.text_field :username %>
        </div>
        <div>
            <%= p.label :password %>
            <%= p.password_field :password %>
        </div>
        <div>
            <%= p.submit "Login" %>
        </div>
    <% end %>
</div>