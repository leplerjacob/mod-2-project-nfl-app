<h2>Your Routines</h2>
<h3>
<%= link_to @routines.size == 0 ? "Add your first routine" : "Add Routine", new_routine_path %>
</h3>
<table>
    <thead>
        <tr>
           Routines  
        </tr>
    </thead>
    <tbody>
        <% @routines.each_with_index do |r, i| %>
            <% r.workouts.each do |w| %>
                <tr>
                    <td>Type</td>
                    <td><%= w.type %></td>
                </tr>
                <tr>
                    <td>Duration</td>
                    <td><%= w.duration %></td>
                </tr>
                <tr>
                    <td>Distance</td>
                    <td><%= w.type %></td>
                </tr>
                <tr>
                    <td>Weight</td>
                    <td><%= w.weight %></td>
                </tr>
                <tr>
                    <td>Reps</td>
                    <td><%= w.type %></td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>